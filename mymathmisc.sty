% make a \Mid macro as flexible replacement for \mid in set definitions
\newcommand{\Mid}[1][\;]{%
#1%
\ifnum\currentgrouptype=16%
\middle\vert\else\vert\fi%
#1%
}

% \dots and a version for custom size control
\newcommand{\cMid}[2][\;]{%
#1#2\vert#1%
}


